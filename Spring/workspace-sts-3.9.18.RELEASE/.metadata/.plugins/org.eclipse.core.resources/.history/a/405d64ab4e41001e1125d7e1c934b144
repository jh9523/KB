package spring02;

import spring02.dao.BookDao;
import spring02.dto.BookDto;

public class BookService {
	BookDao dao;
	
	BookService(BookDao dao){
		this.dao = dao;
	}
	
	public void add(BookDto dto) {	// 积己磊 林涝
		dao.insert(dto);
	}
	
	public void setDao(BookDao dao) {	// setter 林涝
		this.dao = dao;
	}

}